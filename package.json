{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test:ci",
    "clean": "lerna clean",
    "release": "lerna publish",
    "format": "prettier --write './packages/**/*.{js,ts,json}'",
    "format:check": "prettier --list-different './packages/**/*.{js,ts,json}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "./**/*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/winston": "^2.4.4",
    "husky": "^1.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "typescript": "3.4.1"
  },
  "dependencies": {
    "find-config": "^1.0.0",
    "winston": "^3.2.1"
  }
}
