<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Email Confirmation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body style="background-color: #fff;">
    <!-- start preheader -->
    <div
      class="preheader"
      style="display: none; max-width: 0; max-height: 0; overflow: hidden; font-size: 1px; line-height: 1px; color: #fff; opacity: 0;"
    >
      Order Confirmation
    </div>
    <!-- end preheader -->

    <!-- start body -->
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <!-- start copy block -->
      <tr>
        <td align="center" bgcolor="#fff" style="padding: 50px 0">
          <table
            border="0"
            cellpadding="0"
            cellspacing="0"
            width="100%"
            style="max-width: 600px;"
          >
            <!-- start copy -->
            <tr>
              <td align="center">
                <h3
                  style="font-size: 24px; line-height: 32px; font-weight: 300;"
                >
                  Order number: <%= orderNumber %>
                </h3>
              </td>
            </tr>
            <!-- end copy -->
          </table>
        </td>
      </tr>
      <!-- end copy block -->

      <!-- start copy block -->
      <tr>
        <td align="center" bgcolor="#fff">
          <table
            border="0"
            cellpadding="0"
            cellspacing="0"
            width="100%"
            style="max-width: 600px;"
          >
            <!-- start copy -->
            <tr>
              <td
                align="left"
                bgcolor="#ffffff"
                style="font-size: 16px; line-height: 24px;"
              >
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr
                    #777"
                  >
                    <th align="left" style="width: 50%; font-weight: 400;">
                      Product
                    </th>
                    <th align="left" style="font-weight: 400;">Quantity</th>
                    <th align="right" style="font-weight: 400;">Total</th>
                  </tr>
                  <% lineItems.forEach(function(lineItem){ %>
                  <tr>
                    <td align="left" style="width: 50%; padding-top: 20px;">
                      <%= lineItem.name.en %>
                    </td>
                    <td align="left" style="padding-top: 20px;">
                      <%= lineItem.quantity %>
                    </td>
                    <td align="right" style="padding-top: 20px;">
                      <%= lineItem.totalPrice %>
                    </td>
                  </tr>
                  <% }) %>
                </table>
              </td>
            </tr>
            <!-- end copy -->

            <!-- start copy -->
            <tr>
              <td
                align="right"
                bgcolor="#ffffff"
                style="padding: 50px 0"
              >
                <table border="0" cellpadding="0" cellspacing="0">
                  <tr
                    
                  >
                    <td align="right" style="padding: 6px;">Total incl. VAT</td>
                    <td align="right" style="padding: 6px 0 6px 0;">
                      <%= totalPrice %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            <!-- end copy -->

            <!-- start copy -->
            <tr style="border-top: 1px solid #777;">
              <td
                align="left"
                bgcolor="#ffffff"
                style="padding-top: 32px; padding-bottom: 32px; border-bottom: 1px solid #777;"
              >
                <table
                  border="0"
                  cellpadding="0"
                  cellspacing="0"
                  style="width: 100%"
                >
                  <tr>
                    <td width="50%">
                      <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                          <th
                            align="left"
                            style="font-weight: 400; padding: 6px 0;"
                          >
                            Billing address
                          </th>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= firstName %> <%= lastName %>
                          </td>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= shippingAddress.streetName %>
                          </td>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= shippingAddress.postalCode %> <%=
                            shippingAddress.city %>
                          </td>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= shippingAddress.country %>
                          </td>
                        </tr>
                      </table>
                    </td>
                    <td>
                      <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                          <th
                            align="left"
                            style="font-weight: 400; padding: 6px 0;"
                          >
                            Shipping address
                          </th>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= firstName %> <%= lastName %>
                          </td>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= shippingAddress.streetName %>
                          </td>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= shippingAddress.postalCode %> <%=
                            shippingAddress.city %>
                          </td>
                        </tr>
                        <tr>
                          <td align="left" style="padding: 6px 6px 6px 0;">
                            <%= shippingAddress.country %>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            <!-- end copy -->
          </table>
        </td>
      </tr>
      <!-- end copy block -->
    </table>

    <!-- end body -->
  </body>
</html>
